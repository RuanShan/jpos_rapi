<%= simple_form_for(@game_day) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :game_player_id %>

    <%= f.input :day %>

    <%= f.input :play_count %>

    <%= f.input :share_count %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
