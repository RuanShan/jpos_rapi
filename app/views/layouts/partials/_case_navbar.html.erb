<%= link_to case_root_path, class: 'logo' do %>
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini">软山互动</span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>软山互动</b></span>
<% end %>

<nav class='navbar navbar-inverse navbar-toggleable-sm fixed-top bg-inverse'>
  <a href="#" class='sidebar-toggle' data-toggle="offcanvas" role="button">
    <span class="sr-only">Toggle navigation</span>
  </a>

  <ul class='nav navbar-nav navbar-right'>
    <% if user_signed_in? %>
      <li class='nav-item'>
        <%= link_to edit_user_registration_path, class: "nav-link" do %>
          <%= image_tag(current_user.avatar_url, size: '20x20', class: 'avatar') + current_user.username + fa_icon('cog') %>
        <% end %>
      </li>
      <li class='nav-item'>
        <%= link_to t('menu.logout'), destroy_user_session_path,  data: {method: 'delete'}, class:'nav-link' %>
      </li>
    <% else %>
      <li class='nav-item'>
      <%= link_to t('menu.login'), new_user_session_path, class:'nav-link' %>
      </li>
      <li class='nav-item'>
      <%= link_to t('menu.register'), new_user_registration_path, class:'nav-link' %>
      </li>
    <% end %>

  </ul>
</nav>
