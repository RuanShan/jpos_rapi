<div data-hook="admin_user_form_fields" class="row">
  <div class="col-xs-12 col-md-6">
    <%= f.field_container :username, class: ['form-group'] do %>
      <%= f.label :username, Spree.t(:username) %>
      <%= f.text_field :username, class: 'form-control' %>
      <%= f.error_message_on :username %>
    <% end %>
    <%= f.field_container :mobile, class: ['form-group'] do %>
      <%= f.label :mobile, Spree.t(:mobile) %>
      <%= f.text_field :mobile, class: 'form-control' %>
      <%= f.error_message_on :mobile %>
    <% end %>
    <%= f.field_container :email, class: ['form-group'] do %>
      <%= f.label :email, Spree.t(:email) %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.error_message_on :email %>
    <% end %>

  </div>

  <div data-hook="admin_user_form_password_fields" class="col-xs-12 col-md-6">
    <%= f.field_container :gender, class: ['form-group'] do %>
      <%= f.label :gender, Spree.t(:gender) %>
      <%= f.select :gender, [['male','male'],['female','female']], {}, class: 'select2 ' %>

      <%= f.error_message_on :payment_password %>
    <% end %>
    <%= f.field_container :payment_password, class: ['form-group'] do %>
      <%= f.label :payment_password, Spree.t(:payment_password) %>
      <%= f.password_field :payment_password, class: 'form-control' %>
      <%= f.error_message_on :payment_password %>
    <% end %>

    <%= f.field_container :memo, class: ['form-group'] do %>
      <%= f.label :memo, Spree.t(:memo) %>
      <%= f.text_field :memo, class: 'form-control' %>
      <%= f.error_message_on :memo %>
    <% end %>
  </div>
</div>
