<% content_for :page_title do %>
  <%= link_to Spree.t(:products), admin_selling_counters_path %> /
  <%= @product.name %>
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_product_tabs">
    <%= content_tag :li, class: ('active' if current == :details) do %>
      <%= link_to_with_icon 'edit', Spree.t(:details), edit_admin_selling_counter_url(@product) %>
    <% end if can?(:admin, Spree::Product) %>
    <%= content_tag :li, class: ('active' if current == :images) do %>
      <%= link_to_with_icon 'picture', Spree.t(:images), admin_selling_counter_images_url(@product) %>
    <% end if can?(:admin, Spree::Image) && !@product.deleted? %>
    <%= content_tag :li, class: ('active' if current == :variants) do %>
      <%= link_to_with_icon 'th-large', Spree.t(:variants),  admin_selling_counter_variants_url(@product) %>
    <% end if can?(:admin, Spree::Variant) && !@product.deleted? %>
  </ul>
<% end %>
