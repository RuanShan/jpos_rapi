<% content_for :page_title do %>
  <%= link_to Spree.t(:products), admin_selling_prepaid_cards_path %> /
  <%= @product.name %>
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_product_tabs">
    <%= content_tag :li, class: ('active' if current == :details) do %>
      <%= link_to_with_icon 'edit', Spree.t(:details), edit_admin_selling_prepaid_card_url(@product) %>
    <% end if can?(:admin, Spree::Product) %>
    <%= content_tag :li, class: ('active' if current == :images) do %>
      <%= link_to_with_icon 'picture', Spree.t(:images), admin_selling_prepaid_card_images_url(@product) %>
    <% end if can?(:admin, Spree::Image) && !@product.deleted? %>
    <%= content_tag :li, class: ('active' if current == :related_products) do %>
      <%= link_to_with_icon 'resize-small', Spree.t(:related_products), related_admin_product_url(@product) %>
    <% end if can?(:admin, Spree::Variant) && !@product.deleted? %>

  </ul>
<% end %>
