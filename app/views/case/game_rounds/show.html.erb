<section class="content-header">
  <h1><%= @game_round.name %> - 数据 </h1>
</section>
<%= render 'shared/notice' %>
<section class="content">
  <div class="box">
    <div class="box-header">

    <%= search_form_for @q, url: case_game_round_path( @game_round), html: { class: 'form-inline pull-left'} do |f| %>
      <%= f.label :realname_cont,'姓名' %>
      <%= f.search_field :realname_cont, class:'form-control' %>
      <%= f.label :cellphone_cont,'手机' %>
      <%= f.search_field :cellphone_cont, class:'form-control' %>

      <%= f.submit '搜索', class:'btn btn-primary' %>
    <% end %>

    <%= link_to "导出Excel", players_case_game_round_path(@game_round, 'csv'), class:'btn pull-right', method: :get,target: '_blank'  %>

  </div>
    <div class="box-body no-padding">
  <table class="table game_players">
    <thead>
      <tr>
        <th>用户</th>
        <th>姓名</th>
        <th>电话</th>
        <th>联系电话</th>
        <th>备注</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @game_players.each do |game_player| %>
        <tr>
          <td><%= tag :img, src: game_player.avatar, width:50, height:50 %>  <%= game_player.nickname %> </td>
          <td><%= game_player.realname %></td>
          <td><%= game_player.cellphone %></td>
          <td><%= game_player.display_created_at %> </td>
          <td><%= game_player.memo %> </td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @game_players %>
    </div>
  </div>
</section>
